<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/greyBluePrimaryDark</item>
        <item name="colorControlHighlight">@color/greyBluePrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CajaInput" parent="Theme.AppCompat.Light">
        <item name="android:textColorHint">@color/greyBluePrimary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorPrimary">@color/greyBluePrimary</item>
        <item name="colorAccent">@color/greyBluePrimary</item>
        <item name="colorControlNormal">@color/greyBluePrimary</item>
        <item name="colorControlActivated">@color/greyBluePrimaryDark</item>
    </style>
    <style name="RaisedButtonDark1" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RaisedButtonDark2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
