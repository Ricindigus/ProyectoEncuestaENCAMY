<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/layout_102"
    tools:context=".activities.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/edit_text_pregunta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sec100_p102"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:id="@+id/lytp102_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/sec100_p102_txt1"
                android:background="@drawable/marco_tabla"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                />
            <AutoCompleteTextView
                android:id="@+id/sec100_p102_act1"
                android:padding="6dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Actividad Secundaria"
                android:background="@drawable/fondo_edit_text"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytp102_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/sec100_p102_txt2"
                android:background="@drawable/marco_tabla"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <AutoCompleteTextView
                android:id="@+id/sec100_p102_act2"
                android:padding="6dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Actividad Secundaria"
                android:background="@drawable/fondo_edit_text"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytp102_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:layout_marginBottom="16dp"
            >

            <TextView
                android:id="@+id/sec100_p102_txt3"
                android:background="@drawable/marco_tabla"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <AutoCompleteTextView
                android:id="@+id/sec100_p102_act3"
                android:padding="6dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Actividad Secundaria"
                android:background="@drawable/fondo_edit_text"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytp102_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/sec100_p102_txt4"
                android:background="@drawable/marco_tabla"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <AutoCompleteTextView
                android:id="@+id/sec100_p102_act4"
                android:padding="6dp"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Actividad Secundaria"
                android:background="@drawable/fondo_edit_text"
                android:inputType="text"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>