<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrador.encal.Fragments.InicioFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txtCabecera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/caratula_identificacion"
            android:background="@color/colorPrimary"
            android:textColor="@color/icons"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_ruc"
                        android:textColor="@color/icons" />
                    <EditText
                        android:id="@+id/inicio_edt1"
                        android:layout_width="match_parent"
                        android:focusableInTouchMode="true"
                        android:inputType="numberPassword"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/marco_tabla">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_razon_social"
                        android:textColor="@color/icons" />

                    <EditText
                        android:id="@+id/inicio_edt2"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/marco_tabla">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_nombre_comercial"
                        android:textColor="@color/icons" />

                    <EditText
                        android:id="@+id/inicio_edt3"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner"
                        android:layout_margin="5dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_anio_fundacion"
                        android:textColor="@color/icons" />
                    <EditText
                        android:id="@+id/inicio_edt4"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="numberPassword"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner"
                        android:layout_margin="5dp"
                        />
                    <TextView
                        android:id="@+id/inicio_txtError4"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textColor="#FF5252"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/marco_tabla"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:background="@color/colorAccent"
                        android:text="@string/caratula_identificacion_pagina_web"
                        android:textColor="@color/icons" />
                    <EditText
                        android:id="@+id/inicio_edt5"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner" />
                    <CheckBox
                        android:id="@+id/inicio_ck1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="No Tiene"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:buttonTint="@color/colorAccent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/marco_tabla"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6. Correo Electrónico"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"/>
                    <EditText
                        android:id="@+id/inicio_edt6"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner" />
                    <CheckBox
                        android:id="@+id/inicio_ck2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="No Tiene"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:buttonTint="@color/colorAccent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/marco_tabla"
                    android:orientation="vertical"
                    android:focusableInTouchMode="true"
                    android:id="@+id/inicio_lytP7">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="7. Teléfono Fijo"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/inicio_edt7"
                            android:inputType="numberPassword"
                            android:focusableInTouchMode="true"
                            android:layout_width="200dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/fondo_spinner" />
                    </LinearLayout>
                    <CheckBox
                        android:id="@+id/inicio_ck3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="No Tiene"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:buttonTint="@color/colorAccent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/marco_tabla"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView5"
                        android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="8. Teléfono Móvil"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"/>
                    <EditText
                        android:id="@+id/inicio_edt8"
                        android:focusableInTouchMode="true"
                        android:inputType="numberPassword"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner" />
                    <CheckBox
                        android:id="@+id/inicio_ck4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="No Tiene"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:buttonTint="@color/colorAccent"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/caratula_identificacion_conductor_informante"
                android:background="@color/colorPrimary"
                android:textColor="@color/icons"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inicio_lytP10"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:textColor="@color/icons"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_conductor_informante_apellidos"/>
                    <EditText
                        android:id="@+id/inicio_edt9"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"
                        android:layout_marginRight="1dp"
                        android:text="@string/caratula_identificacion_conductor_informante_sexo"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginRight="1dp"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"
                        android:text="@string/caratula_identificacion_conductor_informante_edad"/>
                    <TextView
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/icons"
                        android:background="@color/colorAccent"
                        android:text="@string/nivel_estudios"/>
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/marco_tabla">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/inicio_lyt2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="1dp"
                            android:background="@drawable/fondo_spinner">
                            <Spinner
                                android:id="@+id/inicio_sp1"
                                android:focusableInTouchMode="true"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:entries="@array/sexo"
                                android:layout_weight="1"/>
                        </LinearLayout>
                        <EditText
                            android:id="@+id/inicio_edt11"
                            android:focusableInTouchMode="true"
                            android:inputType="numberPassword"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:paddingLeft="10dp"
                            android:background="@drawable/fondo_spinner"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="1dp"
                            />
                        <LinearLayout
                            android:id="@+id/inicio_lyt3"
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/fondo_spinner">
                            <Spinner
                                android:id="@+id/inicio_sp2"
                                android:focusableInTouchMode="true"
                                android:entries="@array/nivel_estudios"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/inicio_txtError12"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:textColor="#FF5252"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="3"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:textColor="@color/icons"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_conductor_informante_cargo"/>
                    <LinearLayout
                        android:id="@+id/inicio_lyt4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/fondo_spinner">
                        <Spinner
                            android:id="@+id/inicio_sp3"
                            android:focusableInTouchMode="true"
                            android:entries="@array/cargos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/inicio_edtEspecifique"
                        android:focusableInTouchMode="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:hint="Especifique"
                        android:paddingLeft="5dp"
                        android:maxLength="100"
                        android:visibility="gone"
                        android:background="@drawable/fondo_spinner" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inicio_lytP14"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:textColor="@color/icons"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_conductor_informante_N"/>
                    <EditText
                        android:id="@+id/inicio_edt14"
                        android:focusableInTouchMode="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:inputType="text"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/fondo_spinner" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/caratula_identificacion_conocimiento"
                android:background="@color/colorPrimary"
                android:textColor="@color/icons"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inicio_lytP15"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/marco_tabla">
                    <TextView
                        android:textColor="@color/icons"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:text="@string/caratula_identificacion_conocimiento_instituto"
                        android:layout_marginBottom="5dp"/>
                    <RadioGroup
                        android:id="@+id/inicio_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/inicio_rbSi"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Si"/>
                        <RadioButton
                            android:id="@+id/inicio_rbNo"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"/>
                    </RadioGroup>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
